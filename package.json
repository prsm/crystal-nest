{
  "license": "MIT",
  "name": "crystal-nest",
  "description": "A Nest rewrite of crystal, the SOS Discord bot",
  "version": "0.5.1-189",
  "author": "Jonas Schultheiss <jonas.schultheiss@sos-esports.com> (https://jonasschultheiss.dev)",
  "keywords": [
    "discord",
    "nestjs",
    "docker",
    "docker-compose"
  ],
  "homepage": "https://github.com/prsm/crystal-nest",
  "bugs": {
    "url": "https://github.com/prsm/crystal-nest/issues"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "pnpm": "^9.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prsm/crystal-nest.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --debug 0.0.0.0:9229 --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "doc:generate": "npx compodoc -p tsconfig.json -n 'go! Fleet // Versions Microservice'",
    "doc:serve": "pnpm doc:generate && npx compodoc -s",
    "prepare": "husky",
    "release": "release-it"
  },
  "dependencies": {
    "@discord-nestjs/common": "4.0.8",
    "@discord-nestjs/core": "4.3.1",
    "@nestjs/common": "10.4.5",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.5",
    "@nestjs/platform-express": "10.4.5",
    "bufferutil": "4.0.8",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "discord.js": "14.16.3",
    "erlpack": "discord/erlpack",
    "node-gyp": "^10.2.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "utf-8-validate": "6.0.4",
    "zlib-sync": "0.1.9"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.2.0",
    "@nestjs/testing": "10.4.5",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.13",
    "@types/node": "22.7.6",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.9.0",
    "@typescript-eslint/parser": "8.9.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
